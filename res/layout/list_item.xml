<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5.0dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15.0dip"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
    	android:id="@+id/item_container_top">
        <TextView
            android:id="@+id/item_question_categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10.0dip"
            android:textColor="@color/text_link"
            android:layout_centerVertical="true"
            android:text="@string/undefined" />
        <TextView
            android:id="@+id/item_question_typeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:layout_toRightOf="@id/item_question_categoryName"
            android:textSize="10.0dip"
            android:layout_centerVertical="true"
            android:textColor="@color/text_gray"
            android:text="@string/undefined" />
        <TextView
            android:id="@+id/item_question_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="10.0dip"
            android:textColor="@color/text_gray"
            android:layout_centerVertical="true"
            android:text="@string/undefined" />

    </RelativeLayout>
	<TextView android:id="@+id/item_question_content"  
    		android:layout_width="fill_parent" 
           	android:layout_height="wrap_content" 
           	android:paddingLeft="5.0dip"
        	android:paddingRight="5.0dip"
           	android:textSize="12.0dip"
            android:textColor="@color/text_content"
            android:text="@string/undefined"/>
</LinearLayout>